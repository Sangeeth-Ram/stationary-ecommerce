# Server Configuration
NODE_ENV=development
PORT=3000
API_BASE_PATH=/api/v1

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/stationary_ecommerce?schema=public"

# Supabase Authentication
SUPABASE_JWKS_URL="https://your-project.supabase.co/auth/v1/certs"
SUPABASE_AUD="authenticated"
SUPABASE_JWT_ISSUER="supabase"
JWT_PUBLIC_KEYS_CACHE_TTL="900000" # 15 minutes in milliseconds

# Razorpay
RAZORPAY_KEY_ID="your_razorpay_key_id"
RAZORPAY_KEY_SECRET="your_razorpay_key_secret"

# AWS Configuration
AWS_ACCESS_KEY_ID="your_aws_access_key_id"
AWS_SECRET_ACCESS_KEY="your_aws_secret_access_key"
AWS_REGION="your_aws_region"
AWS_S3_BUCKET="your-s3-bucket-name"

# Logging
LOG_LEVEL="info" # error, warn, info, debug, trace

# CORS
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Application
ADMIN_EMAILS="admin@example.com" # Comma-separated list of admin emails

# Session (if using sessions)
SESSION_SECRET="your-session-secret"
SESSION_MAX_AGE=86400000 # 24 hours in milliseconds

# Feature Flags
ENABLE_MAINTENANCE_MODE=false
ENABLE_REGISTRATION=true

# External Services
SENTRY_DSN="" # Optional: For error tracking
NEW_RELIC_LICENSE_KEY="" # Optional: For application monitoring
