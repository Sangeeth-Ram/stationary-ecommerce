{
  "name": "stationary-ecommerce-backend",
  "version": "1.0.0",
  "description": "Production-ready Node.js backend for Stationary E-commerce on AWS Lambda",
  "type": "module",
  "main": "src/handler.js",
  "scripts": {
    "start": "node -r dotenv/config src/handler.js",
    "dev": "nodemon --watch src --exec \"node -r dotenv/config src/handler.js\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:studio": "prisma studio",
    "deploy": "serverless deploy",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "aws-sdk": "^2.1454.0",
    "axios": "^1.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "1.2.0",
    "express-rate-limit": "^6.9.0",
    "helmet": "^7.0.0",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.0.1",
    "razorpay": "^2.8.6",
    "serverless-http": "^3.2.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.119",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.5.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "prisma": "^6.15.0",
    "serverless": "^3.32.2",
    "serverless-offline": "^12.0.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "seed": "ts-node --compiler-options '{\"module\":\"commonjs\"}' prisma/seed.ts"
  }
}
